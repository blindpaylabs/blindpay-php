{
    "name": "blindpay/php",
    "type": "library",
    "description": "Official PHP SDK for BlindPay API - Global payments infrastructure",
    "keywords": [
        "blindpay",
        "payments",
        "api",
        "sdk",
        "global-payments",
        "payment-processing"
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9",
        "ext-openssl": "*",
        "ext-json": "*"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "BlindPay\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Blind Pay, Inc.",
            "email": "support@blindpay.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^3.7",
        "laravel/pint": "^1.21"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "lint:check": "pint --test",
        "lint:fix": "pint"
    }
}

